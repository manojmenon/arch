# Example variables file for Ansible deployment
# Copy this file to vars.yml and update with your actual values

# Application settings
app_name: "project-management"
app_version: "1.0.0"
docker_registry: "localhost:5000"

# Database settings
db_name: "project_management"
db_user: "postgres"
# db_password: "your-secure-password"  # Set in ansible vault

# JWT settings
# jwt_secret: "your-jwt-secret-key"  # Set in ansible vault

# OpenTelemetry settings
otel_enabled: true
otel_endpoint: "http://localhost:4318/v1/traces"

# Server settings
server_host: "0.0.0.0"
server_port: "8080"
environment: "production"

# RBAC settings
rbac_model_path: "/app/rbac_model.conf"
rbac_policy_path: "/app/rbac_policy.csv"

# Kind cluster settings
kind_cluster_name: "kind-hello-01"
kind_node_count: 2

# Cilium settings
cilium_version: "1.14.5"
hubble_enabled: true

# Resource limits
backend_memory_limit: "512Mi"
backend_cpu_limit: "500m"
frontend_memory_limit: "256Mi"
frontend_cpu_limit: "200m"
postgres_memory_limit: "512Mi"
postgres_cpu_limit: "500m"

